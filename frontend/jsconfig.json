{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": ["node", "vue"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "tests/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}